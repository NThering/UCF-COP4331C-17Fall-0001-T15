<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team15.articlemanagerclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="user_interface.TitleScreenLoggedOut">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="user_interface.LoginScreen" />
        <activity android:name="user_interface.TitleScreenLoggedIn"></activity>
        <activity android:name="user_interface.AllArticles" />
        <activity android:name="user_interface.SubCategories" />
        <activity android:name="user_interface.ArticlesPage" />
        <activity android:name="user_interface.MyArticles" />
        <activity android:name="user_interface.UploadScreen" />
        <activity android:name="user_interface.ArticlePreview" />
        <activity android:name="user_interface.DownloadScreen"></activity>

    </application>

</manifest>